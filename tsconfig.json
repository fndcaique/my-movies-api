{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@core/*": [
        "./src/@core/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/@core/jest.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*__tests__/",
    "testing",
    "**/*testing/",
    "**/*.spec.ts"
  ]
}